@model dominio.Disco

@{
    ViewData["Title"] = "Crear Disco";
}

<h1>Crear Disco</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaLanzamiento"></label>
        <input asp-for="FechaLanzamiento" type="date" class="form-control" />
        <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CantidadCanciones"></label>
        <input asp-for="CantidadCanciones" class="form-control" />
        <span asp-validation-for="CantidadCanciones" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UrlTapa"></label>
        <input asp-for="UrlTapa" class="form-control" />
        <span asp-validation-for="UrlTapa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Estilo</label>
        <select asp-for="Estilo.Id" class="form-control"
                asp-items="ViewBag.Estilos"></select>
    </div>

    <div class="form-group">
        <label>Tipo Edición</label>
        <select asp-for="TipoEdicion.Id" class="form-control"
                asp-items="ViewBag.TipoEdiciones"></select>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
